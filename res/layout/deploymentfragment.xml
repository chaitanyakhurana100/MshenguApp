<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fragment2"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView1"
            android:layout_gravity="center">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content">

            <Button
                    android:id="@+id/scanButtonDeployment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@xml/mshengubutton"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:padding="15dp"
                    android:text="Scan Unit Tag"
                    style="@style/btnStyleGenoa"

                    />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content">



                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unit ID "
                            android:paddingLeft="10dp"
                            android:textSize="20dp"
                        />

                <EditText android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:id="@+id/unitIdDeployment"
                          android:layout_marginRight="10dp"
                          android:layout_marginLeft="10dp"
                          android:hint="Press scan button"

                        />

            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content">



                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Latitude "
                            android:paddingLeft="10dp"
                            android:textSize="20dp"
                        />

                <EditText android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:id="@+id/latDeployment"
                          android:layout_marginRight="10dp"
                          android:layout_marginLeft="10dp"
                          android:hint="Calculating location"

                        />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content">



                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Longitude "
                            android:paddingLeft="10dp"
                            android:textSize="20dp"
                        />

                <EditText android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:id="@+id/lonDeployment"
                          android:layout_marginRight="10dp"
                          android:layout_marginLeft="10dp"
                          android:hint="Calculating location"

                        />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content">



                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Site "
                            android:paddingLeft="10dp"
                            android:textSize="20dp"
                        />

                <AutoCompleteTextView android:id="@+id/actv_site"
                                      android:layout_height="wrap_content"
                                      android:layout_width="fill_parent"
                                      android:layout_marginLeft="10dp"
                                      android:hint="Enter site name"
                                      />


            </LinearLayout>





            <Button
                    android:id="@+id/tagButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@xml/mshengubutton"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:padding="15dp"
                    android:text="Deploy Unit"
                    style="@style/btnStyleGenoa"
                    />






            <!--  <AutoCompleteTextView android:id="@+id/actv"
                                       android:layout_height="wrap_content"
                                       android:layout_width="fill_parent"
                                       android:layout_marginLeft="10dp"
                                      android:hint="Enter country name" />

                -->




        </LinearLayout>

    </ScrollView>

</LinearLayout>